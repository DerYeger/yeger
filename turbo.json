{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI"],
  "pipeline": {
    "check:tsc": {
      "dependsOn": ["^build", "codegen"]
    },
    "check:vue": {
      "dependsOn": ["^build", "codegen"]
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["dist/**", ".next/**"]
    },
    "generate": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "codegen": {},
    "bundlesize": {
      "dependsOn": ["build"],
      "inputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["build", "generate"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["COVERAGE"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["@yeger/eslint-config#build", "^build", "build"]
    },
    "//#lint:root": {
      "dependsOn": ["@yeger/eslint-config#build"],
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ]
    }
  }
}
