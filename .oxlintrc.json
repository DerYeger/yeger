{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "nextjs",
    "oxc",
    "import",
    "jsdoc",
    "jsx-a11y",
    "node",
    "promise",
    "vitest",
    "vue"
  ],
  "categories": {
    "correctness": "error"
  },
  "settings": {
    "jsdoc": {
      "tagNamePreference": {
        "defaultValue": "defaultValue",
        "remarks": "remarks"
      }
    }
  },
  "rules": {
    "no-unassigned-import": "off",
    "react-in-jsx-scope": "off",
    "valid-expect": "off"
  }
}
