{
  "automerge": true,
  "automergeType": "branch",
  "extends": [
    ":semanticPrefixFixDepsChoreOthers",
    ":assignee(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":semanticCommits",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "minimumReleaseAge": "2 days"
    },
    {
      "matchDepTypes": [
        "pnpm.catalog.vue2"
      ],
      "matchPackageNames": [
        "vue",
        "vue-template-compiler"
      ],
      "allowedVersions": "<3"
    },
    {
      "matchDepTypes": [
        "pnpm.catalog.vue2"
      ],
      "matchPackageNames": [
        "@vue/test-utils"
      ],
      "allowedVersions": "<2"
    }
  ],
  "schedule": [
    "after 12am and before 7am on Saturday"
  ],
  "timezone": "Europe/Vienna"
}
