{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "public/**",
        "src/**",
        "test/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "public/**",
        "src/**"
      ],
      "outputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "inputs": ["tsconfig.json", "vite.config.ts", "src/**", "test/**"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "outputs": [],
      "cache": false
    },
    "lint": {
      "inputs": ["*"],
      "outputs": []
    }
  }
}
