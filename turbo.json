{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "CI"
  ],
  "tasks": {
    "check:publish": {
      "dependsOn": [
        "build",
        "generate"
      ]
    },
    "check:tsc": {
      "dependsOn": [
        "^build",
        "codegen"
      ]
    },
    "check:vue": {
      "dependsOn": [
        "^build",
        "codegen"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "generate": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "codegen": {},
    "bundlesize": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "dist/**"
      ]
    },
    "preview": {
      "dependsOn": [
        "build",
        "generate"
      ],
      "cache": false
    },
    "bench": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "COVERAGE"
      ]
    },
    "e2e": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "playwright.config.ts",
        "tests"
      ],
      "outputs": [
        "playwright-report",
        "test-results"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build",
        "codegen"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "@yeger/eslint-config#build",
        "^build",
        "build"
      ]
    },
    "//#lint:root": {
      "dependsOn": [
        "@yeger/eslint-config#build"
      ],
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ]
    },
    "//#syncpack:lint": {
      "inputs": [
        ".syncpackrc",
        "pnpm-lock.yaml",
        "pnpm-workspace.yaml"
      ]
    }
  }
}
