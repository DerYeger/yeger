{
  "name": "yeger-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.14.2",
  "repository": {
    "url": "https://github.com/DerYeger/yeger"
  },
  "workspaces": [
    "apps/*",
    "docs/*",
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "nr turbo run build",
    "changeset": "changeset",
    "ci": "nr turbo run build lint test typecheck",
    "dev": "nr turbo run dev --parallel",
    "fix": "nr turbo run lint -- --fix",
    "install-hooks": "is-ci || husky install",
    "lint": "nr turbo run lint",
    "preview": "nr turbo run preview",
    "test": "nr turbo run test",
    "turbo": "FORCE_COLOR=1 turbo",
    "typecheck": "nr turbo run typecheck",
    "version": "changeset version && pnpm install --no-frozen-lockfile"
  },
  "devDependencies": {
    "@antfu/ni": "0.18.8",
    "@changesets/cli": "2.25.2",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@types/node": "18.11.9",
    "@yeger/eslint-config": "1.4.52",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "semantic-release": "19.0.5",
    "turbo": "latest"
  },
  "pnpm": {
    "packageExtensions": {
      "vue-template-compiler": {
        "peerDependencies": {
          "vue": "^2.6.14"
        }
      }
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts,vue,yaml,yml}": "eslint --fix"
  }
}
