{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI"],
  "pipeline": {
    "check:tsc": {
      "dependsOn": ["^build", "codegen"],
      "outputs": [],
      "outputMode": "new-only"
    },
    "check:vue": {
      "dependsOn": ["^build", "codegen"],
      "outputs": [],
      "outputMode": "new-only"
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["dist/**", ".next/**", ".output/**"],
      "outputMode": "new-only"
    },
    "@yeger/eslint-config#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["src/**"],
      "outputMode": "new-only"
    },
    "@yeger/tsconfig#build": {
      "dependsOn": ["^build"],
      "inputs": ["*.json"],
      "outputs": ["*.json"],
      "outputMode": "new-only"
    },
    "generate": {
      "dependsOn": ["build"],
      "outputs": ["dist/**", ".next/**", ".output/**"],
      "outputMode": "new-only"
    },
    "codegen": {},
    "@yeger/fol#codegen": {
      "inputs": ["src/*.ohm"],
      "outputs": ["src/fol.ohm-bundle.*"],
      "outputMode": "new-only"
    },
    "bundlesize": {
      "dependsOn": ["build"],
      "inputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "preview": {
      "dependsOn": ["build", "generate"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["COVERAGE"],
      "outputMode": "new-only"
    },
    "dev": {
      "dependsOn": ["codegen"],
      "outputs": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["@yeger/eslint-config#build", "^build", "build"],
      "outputs": [],
      "outputMode": "new-only"
    },
    "//#lint:root": {
      "dependsOn": ["@yeger/eslint-config#build"],
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ],
      "outputs": [],
      "outputMode": "new-only"
    }
  }
}
