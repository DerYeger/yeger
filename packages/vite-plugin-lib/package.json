{
  "name": "vite-plugin-lib",
  "version": "1.2.2",
  "description": "Vite plugin for build configuration, automatic aliases, and type declarations.",
  "author": "Jan MÃ¼ller <janmueller3698@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/DerYeger",
  "homepage": "https://github.com/DerYeger/yeger/tree/main/packages/vite-plugin-lib",
  "repository": "github:DerYeger/yeger",
  "bugs": {
    "url": "https://github.com/DerYeger/yeger/issues"
  },
  "keywords": [
    "vite-plugin",
    "declarations",
    "library",
    "aliases"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "unbuild && cp dist/index.d.ts dist/index.d.mts && mv dist/index.d.ts dist/index.d.cts",
    "check:publish": "publint run --strict",
    "check:tsc": "tsc --noEmit",
    "lint": "yeger-lint"
  },
  "peerDependencies": {
    "typescript": "*",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "picocolors": "1.0.0",
    "tsconfck": "^2.1.1",
    "vite-plugin-dts": "2.3.0"
  },
  "devDependencies": {
    "@types/node": "18.16.18",
    "@yeger/tsconfig": "workspace:*",
    "typescript": "5.1.3",
    "unbuild": "1.2.1",
    "vite": "4.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
