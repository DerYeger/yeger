{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "public/**",
        "src/**",
        "test/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "public/**",
        "src/**"
      ],
      "outputs": ["dist/**"]
    },
    "@yeger/eslint-config#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["src/**"]
    },
    "@yeger/tsconfig#build": {
      "dependsOn": ["^build"],
      "inputs": ["base.json", "lib.json", "web.json"],
      "outputs": ["base.json", "lib.json", "web.json"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["tsconfig.json", "vite.config.ts", "src/**", "test/**"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "outputs": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["@yeger/eslint-config#build"],
      "inputs": ["**"],
      "outputs": []
    },
    "//#lint:root": {
      "dependsOn": ["^build"],
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ],
      "outputs": []
    }
  }
}
