{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    ":semanticPrefixFixDepsChoreOthers",
    ":autodetectPinVersions",
    ":assignee(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":semanticCommits",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchFiles": [
        "docs/vue2-masonry-wall-docs/package.json",
        "packages/vue2-masonry-wall/package.json",
        "packages/vue-persistent-storage-manager/package.json"
      ],
      "matchPackageNames": ["vue", "vue-template-compiler"],
      "allowedVersions": "<3"
    },
    {
      "matchFiles": [
        "docs/vue2-masonry-wall-docs/package.json",
        "packages/vue2-masonry-wall/package.json",
        "packages/vue-persistent-storage-manager/package.json"
      ],
      "matchPackageNames": ["@vue/test-utils"],
      "allowedVersions": "<2"
    },
    {
      "matchPackageNames": ["nuxt"],
      "allowedVersions": "3.0.0"
    },
    {
      "matchPackageNames": ["nuxt-icon"],
      "allowedVersions": "<=0.2.6"
    },
    {
      "matchPackageNames": ["open"],
      "allowedVersions": "<9"
    }
  ],
  "schedule": ["after 12am and before 7am on Saturday"],
  "timezone": "Europe/Vienna"
}
