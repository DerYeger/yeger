{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "*.d.ts",
        "pages/**",
        "public/**",
        "src/**",
        "test/**",
        "styles/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "index.html",
        "tsconfig.json",
        "vite.config.ts",
        "*.d.ts",
        "pages/**",
        "public/**",
        "src/**",
        "styles/**"
      ],
      "outputs": ["dist/**", ".next/**"]
    },
    "@yeger/eslint-config#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["src/**"]
    },
    "@yeger/tsconfig#build": {
      "dependsOn": ["^build"],
      "inputs": ["*.json"],
      "outputs": ["*.json"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "tsconfig.json",
        "vite.config.ts",
        "*.d.ts",
        "src/**",
        "test/**"
      ],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "outputs": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["@yeger/eslint-config#build"],
      "inputs": ["**"],
      "outputs": []
    },
    "//#lint:root": {
      "dependsOn": ["@yeger/eslint-config#build"],
      "inputs": [
        "./*",
        ".vscode/**",
        ".husky/**",
        ".github/**",
        ".changeset/**"
      ],
      "outputs": []
    }
  }
}
