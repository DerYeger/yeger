{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    "config:base",
    ":assignee(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":prHourlyLimitNone",
    ":semanticCommits",
    "group:allNonMajor",
    "group:monorepos"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchFiles": [
        "docs/vue2-masonry-wall-docs/package.json",
        "packages/vue2-masonry-wall/package.json"
      ],
      "matchPackageNames": ["vue", "vue-template-compiler"],
      "allowedVersions": "<3"
    },
    {
      "matchFiles": [
        "docs/vue2-masonry-wall-docs/package.json",
        "packages/vue2-masonry-wall/package.json"
      ],
      "matchPackageNames": ["@vue/test-utils"],
      "allowedVersions": "<2"
    }
  ],
  "schedule": ["after 12am and before 7am on Saturday"],
  "timezone": "Europe/Vienna"
}
