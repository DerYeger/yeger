{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "extends": [
    ":semanticPrefixFixDepsChoreOthers",
    ":autodetectPinVersions",
    ":assignee(DerYeger)",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(vulnerability)",
    ":labels(dependencies,renovate)",
    ":semanticCommits",
    "group:allNonMajor",
    "workarounds:all"
  ],
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "pnpm.catalog.vue2"
      ],
      "matchPackageNames": ["vue", "vue-template-compiler"],
      "allowedVersions": "<3"
    },
    {
      "matchDepTypes": ["pnpm.catalog.vue2"],
      "matchPackageNames": ["@vue/test-utils"],
      "allowedVersions": "<2"
    },
    {
      "matchPackageNames": ["open"],
      "allowedVersions": "<9"
    },
    {
      "matchPackageNames": [
        "nuxt"
      ],
      "allowedVersions": "<=3.15.4"
    }
  ],
  "schedule": ["after 12am and before 7am on Saturday"],
  "timezone": "Europe/Vienna"
}
